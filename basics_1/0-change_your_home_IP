#!/usr/bin/env bash
# Configures /etc/hosts to make localhost resolve to 127.0.0.2 and facebook.com to 8.8.8.8

if [ "$EUID" -ne 0 ]; then
    echo "Please run as root"
    exit 1
fi

# Backup current hosts file
cp /etc/hosts /etc/hosts.bak

# Remove existing entries for localhost and facebook.com
grep -v -E 'localhost|facebook\.com' /etc/hosts > /tmp/hosts.new

# Add the required mappings
echo "127.0.0.2 localhost" >> /tmp/hosts.new
echo "8.8.8.8 facebook.com" >> /tmp/hosts.new

# Replace the original hosts file
mv /tmp/hosts.new /etc/hosts